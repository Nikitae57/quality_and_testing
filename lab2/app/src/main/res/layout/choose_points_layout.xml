<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvFirstPoint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/first_point"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/npFirstPoint"
        app:layout_constraintEnd_toEndOf="@id/npFirstPoint"/>

    <NumberPicker
        android:id="@+id/npFirstPoint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/npSecondPoint"
        app:layout_constraintTop_toBottomOf="@id/tvFirstPoint" />

    <TextView
        android:id="@+id/tvSecondPoint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/second_point"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/npSecondPoint"
        app:layout_constraintEnd_toEndOf="@id/npSecondPoint"/>

    <NumberPicker
        android:id="@+id/npSecondPoint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/npFirstPoint"
        app:layout_constraintTop_toBottomOf="@id/tvSecondPoint" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFindShortestWay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/find_shortest_way"
        app:layout_constraintTop_toBottomOf="@id/npFirstPoint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>